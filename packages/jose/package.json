  "sideEffects": false,
  "dependencies": {
    "@waci/core": "^0.1.0",
    "jose": "^3.6.2"
  },
  "devDependencies": {
    "@bloomprotocol/eslint-config": "^1.0.0",
    "@bloomprotocol/prettier-config": "^1.0.0",
    "@typescript-eslint/eslint-plugin": "^2.14.0",
    "@typescript-eslint/parser": "^2.23.0",
    "ava": "^3.15.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-prettier": "^3.1.4",
    "esm": "^3.2.25",
    "prettier": "^1.19.1",
    "ts-node": "^9.1.1",
    "tsdx": "^0.14.1",
    "tslib": "^2.0.3",
    "typescript": "^3.9.7"
  },
  "ava": {
    "files": [
      "**/*.test.*"
    ],
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register"
    ]
  }
}
